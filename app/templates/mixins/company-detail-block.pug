include global

mixin company-detail-block(data)
	.company-detail-block(class=attributes.class)
		+g-tag((data && data.link) ? 'a' : '')(
			class="company-detail-block__image-wrap"
			class= (data && data.link) ? 'fancybox' : ''
			href= data.img
			data-fancybox
			data-caption= data.title
		)
			.company-detail-block__image(
				style='background-image: url(' + (data.img || '../img/no-photo.svg') + ');'
				role='img'
				aria-label= data.title
				title= data.title
			)
		.company-detail-block__text
			p.title.title_sm.company-detail-block__title= data.title
			p.text= data.text
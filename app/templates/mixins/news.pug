mixin news(data)
	a.news(
		href= data.link
		class= attributes.class
	)
		.news__img-wrap
			.news__img(
				style='background-image: url(' + data.src + ');'
				role='img'
				aria-label='text'
				title='text'
			)
		.news__text-wrap
			p.news__date= data.date
			p.title.news__title= data.title
			.news__text.text
				block
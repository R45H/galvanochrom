// HEADER
include ../mixins/logo
include ../mixins/menu
include ../mixins/svg
include ../mixins/select


header.header
	.header__top
		.container
			.row.header__top-content
				.col-12.col-sm-4.col-md-3
					.header__logo
						+logo
				.col-12.col-sm-8.col-md-9
					.header__contacts
						.contacts-item
							+svg('location', 'contacts-item__icon')
							p г. Санкт-Петербург Уманский пер., д. 71 (здание "Трест-101")
						.contacts-item
							+svg('message', 'contacts-item__icon')
							p
								a.contacts-item__link(href='mailto: manager@galvanochrom.ru') manager@galvanochrom.ru
						.contacts-item
							+svg('phone', 'contacts-item__icon')
							p
								a.contacts-item__phone(href='tel: 89219441109 ') +7 (921) 944-11-09
	.header__bottom
		.container
			.header__bottom-content
				nav.header__menu-wrap
					button.toggle.header__toggle
					+menu([
						{text: "Услуги", link: '#'},
						{text: "Технологии", link: '#'},
						{text: "Новости", link: '#'},
						{text: "О компании", link: '#'},
						{text: "Наши проекты", link: '#'},
						{text: "Контакты", link: '#'}
					])(class="header__menu header__menu_mobile-hidden")
				.header__select-wrap
					+select(select)(class='header__select')